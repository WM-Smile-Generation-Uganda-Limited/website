---
import '../styles/style.css';
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body class="bg-gray-50 text-gray-800">
		<header id="header" class="bg-green-800 text-white shadow-lg sticky top-0 z-50 transition-all duration-300">
			<div class="container mx-auto px-6 py-3">
				<nav class="flex items-center justify-between">
					<!-- Logo -->
					<a href="#" class="flex items-center space-x-3">
						<!-- IMPORTANT: Replace this placeholder URL with the path to your actual logo image -->
						<img src="https://placehold.co/60x60/FFFFFF/4A5568?text=WM" alt="WM Smile Generation Logo" class="h-12 w-12 rounded-full border-2 border-white">
						<span class="text-lg font-bold tracking-wide">WM Smile Generation</span>
					</a>
	
					<!-- Desktop Menu -->
					<div class="hidden md:flex items-center space-x-6">
						<a href="/" class="hover:text-green-200 transition duration-300">Home</a>
						<a href="/about" class="hover:text-green-200 transition duration-300">About Us</a>
						<a href="/our-mission" class="hover:text-green-200 transition duration-300">Our Mission</a>
						<a href="#" class="hover:text-green-200 transition duration-300">Blog</a>
						<a href="/partnership" class="hover:text-green-200 transition duration-300">Partnership</a>
					</div>
	
					<!-- Donate Button & Mobile Menu Button -->
					<div class="flex items-center space-x-4">
						 <a href="#" class="bg-white text-green-800 font-bold py-2 px-5 rounded-full hover:bg-green-100 transition duration-300 transform hover:scale-105 shadow-md">
							Donate
						</a>
						<button id="mobile-menu-button" class="md:hidden p-2 rounded-md focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white">
							<svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
							</svg>
						</button>
					</div>
				</nav>
			</div>
			<!-- Mobile Menu -->
			<div id="mobile-menu" class="md:hidden hidden px-6 pb-4 space-y-2">
				<a href="/" class="block hover:bg-green-700 p-2 rounded">Home</a>
				<a href="/about" class="block hover:bg-green-700 p-2 rounded">About Us</a>
				<a href="/our-mission" class="block hover:bg-green-700 p-2 rounded">Our Mission</a>
				<a href="#" class="block hover:bg-green-700 p-2 rounded">Blog</a>
				<a href="/partnership" class="block hover:bg-green-700 p-2 rounded">Partnership</a>
			</div>
		</header>
		<slot />
		<footer class="bg-green-900 text-white">
			<div class="container mx-auto px-6 py-12">
				<div class="grid md:grid-cols-3 gap-8">
					<!-- About -->
					<div>
						<h4 class="text-xl font-bold mb-4">WM Smile Generation</h4>
						<p class="text-green-200">Nurturing minds and growing futures for the children and youth of Uganda.</p>
					</div>
					<!-- Quick Links -->
					<div>
						<h4 class="text-xl font-bold mb-4">Quick Links</h4>
						<ul class="space-y-2">
							<li><a href="/about" class="hover:text-green-200 transition">About Us</a></li>
							<li><a href="#" class="hover:text-green-200 transition">Blog</a></li>
							<li><a href="/partnership" class="hover:text-green-200 transition">Become a Partner</a></li>
							<li><a href="#" class="hover:text-green-200 transition">Contact Us</a></li>
						</ul>
					</div>
					<!-- Contact Info -->
					<div>
						<h4 class="text-xl font-bold mb-4">Connect With Us</h4>
						<p class="text-green-200 mb-2">Kampala, Uganda</p>
						<p class="text-green-200 mb-4">info@wmsmilegeneration.org</p>
						<!-- Social Icons -->
						<div class="flex space-x-4">
							<a href="#" class="hover:opacity-75 transition"><svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24"><path d="M22.46,6C21.69,6.35 20.86,6.58 20,6.69C20.88,6.16 21.56,5.32 21.88,4.31C21.05,4.81 20.13,5.16 19.16,5.36C18.37,4.5 17.26,4 16,4C13.65,4 11.73,5.92 11.73,8.29C11.73,8.63 11.77,8.96 11.84,9.28C8.28,9.09 5.11,7.38 2.9,4.79C2.53,5.42 2.33,6.15 2.33,6.94C2.33,8.43 3.1,9.75 4.18,10.53C3.46,10.5 2.8,10.32 2.2,10.03C2.2,10.05 2.2,10.07 2.2,10.09C2.2,12.27 3.73,14.09 5.79,14.53C5.45,14.62 5.08,14.66 4.7,14.66C4.42,14.66 4.15,14.63 3.89,14.58C4.45,16.39 6.11,17.68 8.1,17.72C6.6,18.84 4.72,19.56 2.65,19.56C2.31,19.56 1.98,19.54 1.65,19.5C3.62,20.79 5.96,21.5 8.45,21.5C16,21.5 20.33,14.97 20.33,9.21C20.33,9.03 20.33,8.85 20.32,8.67C21.16,8.08 21.88,7.1 22.46,6Z"></path></svg></a>
							<a href="#" class="hover:opacity-75 transition"><svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.85s-.012 3.584-.07 4.85c-.148 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07s-3.584-.012-4.85-.07c-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.85s.012-3.584.07-4.85c.149-3.227 1.664-4.771 4.919-4.919C8.416 2.175 8.796 2.163 12 2.163m0-2.163C8.74 0 8.333.011 7.053.069 2.59.285.285 2.59.069 7.053.011 8.333 0 8.74 0 12s.011 3.667.069 4.947c.216 4.463 2.521 6.768 7.053 6.984 1.28.058 1.687.069 4.947.069s3.667-.011 4.947-.069c4.532-.216 6.837-2.521 6.984-7.053.058-1.28.069-1.687.069-4.947s-.011-3.667-.069-4.947C21.715 2.59 19.41 2.85 14.947.069 13.667.011 13.26 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.88 1.44 1.44 0 000-2.88z"></path></svg></a>
						</div>
					</div>
				</div>
				<div class="mt-8 border-t border-green-800 pt-6 text-center text-green-300 text-sm">
					<p>&copy; 2025 WM Smile Generation Uganda Limited. All Rights Reserved.</p>
				</div>
			</div>
		</footer>
	</body>
</html>
<script>
	// Mobile Menu Toggle
	const mobileMenuButton = document.getElementById('mobile-menu-button');
	const mobileMenu = document.getElementById('mobile-menu');
	if (mobileMenuButton && mobileMenu) {
		mobileMenuButton.addEventListener('click', () => {
			mobileMenu.classList.toggle('hidden');
		});
	}

	// Sticky header background change on scroll
	const header = document.getElementById('header');
	if (header) {
		window.onscroll = function() {
			if (window.pageYOffset > 50) {
				header.classList.add('bg-green-900');
			} else {
				header.classList.remove('bg-green-900');
			}
		};
	}
</script>
<style is:global>
	body {
		font-family: 'Inter', sans-serif;
	}
</style>
