<style>
  .hero {
    display: grid;
    gap: 1.5rem;
    padding-block: clamp(3rem, 8vw, 5rem);
    text-align: center;
  }

  .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-size: 0.85rem;
    color: rgba(15, 23, 42, 0.65);
  }

  h1 {
    font-size: clamp(2.4rem, 6vw, 3.5rem);
    line-height: 1.1;
    margin: 0;
  }

  .lede {
    font-size: clamp(1.05rem, 2.5vw, 1.2rem);
    color: rgba(15, 23, 42, 0.72);
    margin: 0 auto;
    max-width: 50ch;
  }

  .cta-group {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
  }

  .cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1.5rem;
    border-radius: 999px;
    border: 1px solid rgba(15, 23, 42, 0.12);
    font-weight: 600;
    transition: transform 150ms ease, box-shadow 150ms ease;
    background: white;
  }

  .cta.primary {
    background: linear-gradient(135deg, #2563eb, #9333ea);
    color: white;
    border: none;
    box-shadow: 0 10px 20px -12px rgba(79, 70, 229, 0.7);
  }

  .cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 24px -16px rgba(15, 23, 42, 0.4);
  }

  .features {
    display: grid;
    gap: 1.5rem;
    padding-block: clamp(2.5rem, 6vw, 4rem);
  }

  .features article {
    background: white;
    border-radius: 1rem;
    padding: 1.75rem;
    box-shadow: 0 10px 30px -22px rgba(15, 23, 42, 0.4);
    text-align: left;
  }

  .features h2 {
    margin-top: 0;
    margin-bottom: 0.5rem;
    font-size: 1.2rem;
  }

  @media (min-width: 780px) {
    .hero {
      text-align: left;
    }

    .features {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }
</style>
