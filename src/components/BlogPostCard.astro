---
const { post } = Astro.props;

const categoryColors = {
    'Education': 'bg-green-100 text-green-800',
    'Conservation': 'bg-yellow-100 text-yellow-800',
    'Mental Health': 'bg-blue-100 text-blue-800',
    'Community': 'bg-purple-100 text-purple-800',
    'Success Story': 'bg-pink-100 text-pink-800',
    'Volunteering': 'bg-gray-100 text-gray-800',
};

const categoryColor = categoryColors[post.data.category] || 'bg-gray-100 text-gray-800';
---
<div class="bg-white rounded-lg shadow-lg overflow-hidden flex flex-col">
    <img src={post.data.image} alt={`Image for ${post.data.title}`} class="w-full h-48 object-cover">
    <div class="p-6 flex flex-col flex-grow">
        <div class="mb-4">
            <span class:list={[categoryColor, 'text-xs', 'font-semibold', 'mr-2', 'px-2.5', 'py-0.5', 'rounded-full']}>{post.data.category}</span>
        </div>
        <h3 class="text-2xl font-bold text-stone-800 mb-2">{post.data.title}</h3>
        <p class="text-stone-600 leading-relaxed mb-4 flex-grow">{post.data.description}</p>
        <div class="text-sm text-stone-500 mt-auto">
            <span>By {post.data.author}</span> | <span>{post.data.pubDate.toDateString()}</span>
        </div>
        <a href={`/blog/${post.slug}`} class="mt-4 font-bold text-green-700 hover:text-green-900 self-start">Read More &rarr;</a>
    </div>
</div>
